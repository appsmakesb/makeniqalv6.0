<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list android:opacity="transparent">
            <item android:gravity="left" android:width="300dp">
                <shape android:shape="rectangle">
                    <solid android:color="#eff1f1"/>
                    <corners android:radius="10dp"/>
                    <stroke android:width="1dp" android:color="#eaeef0"/>
                    <padding android:left="0dp" android:top="0dp" android:right="10dp" android:bottom="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
